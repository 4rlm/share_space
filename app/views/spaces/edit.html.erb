<h3 class="text-center">Update Your Space</h3>

<%= render 'form', space: @space %>


<!-- modals don't work yet, need to get locals in -->
<% if @address %>
  <%= link_to "Update Address", edit_address_path, :class => "btn", :remote => true, "data-toggle" => "modal", "data-target" => "address-modal", address: @space.address %>
  <div class="modal hide fade" id="address-modal" title="address modal">
    <div class="modal-header">
      <button aria-hidden="true" class="close" data-dismiss="modal" type="button">×</button>
      <h3 id="addressModalLabel">Edit Address</h3>
    </div>
    <div class="modal-body address-modal">

    </div>
  </div>
<%else%>
  <%= link_to "Add Address", new_address_path, :class => "btn", :remote => true, "data-toggle" => "modal", "data-target" => "address-modal", address: Address.new %>
  <div class="modal hide fade" id="address-modal" title="address modal">
    <div class="modal-header">
      <button aria-hidden="true" class="close" data-dismiss="modal" type="button">×</button>
      <h3 id="AddressModalLabel">Add Address</h3>
    </div>
    <div class="modal-body address-modal">

    </div>
  </div>
<%end%>



<%= link_to 'Show', @space %> |
<%= link_to 'Back', spaces_path, class: "btn btn-success" %>
