    <div class="row modal-dialog">

      <!-- Modal content-->
      <div class="col-md-6 modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h5 class="modal-title" style="color: blue;">Login-Register <%#= icon('camera-retro') %></h5>
        </div>

        <!-- Modal body-->
        <div class="modal-body">
          <p>This is the modal body for user register/login.</p>
          <%#= render 'photos/upload_image_form', photo: Photo.new %>

        </div>

      </div>

    </div>
  </div>

