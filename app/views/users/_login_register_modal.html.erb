<!-- MODAL BUTTONS -->
<button type="button" class="btn btn-xs" style="color: white; background: black;" data-toggle="modal" data-target="#userLoginRegisterModal">Login-Register <%#= icon('camera-retro') %></button>

<!-- Modal -->
