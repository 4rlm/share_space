<h3>Amenities</h3>

<div class="row">
  <table class="table table-bordered table-hover table-striped text-nowrap">
    <thead>
      <tr>
        <th>Amenity</th>
        <th colspan="2">Manage <%= icon('sliders') %></th>
      </tr>
    </thead>

  <tbody>
    <% @amenities.each do |amenity| %>
      <tr>
        <td><%= link_to amenity.name, amenity %></td>

        <td><%= link_to edit_amenity_path(amenity) do %>
          <%= icon('pencil-square-o') %>
          <% end %>
        </td>

        <td><%= link_to amenity, remote: true, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <%= icon('trash') %>
          <% end %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

</div>

<%= link_to 'New Amenity', new_amenity_path, class: "btn btn-success" %>
