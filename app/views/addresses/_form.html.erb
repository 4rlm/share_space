
<%= form_with(model: address, remote: true) do |form| %>
  <%if address%>
    <% if address.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(address.errors.count, "error") %> prohibited this address from being saved:</h2>

        <ul>
        <% address.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  <%end%>

  <% if @space %>
    <%= form.hidden_field :space_id, value: @space.id %>
  <%else%>
    <div class="field form-group field">
      <%= form.label :space_id %>
      <%= form.number_field :space_id, id: :address_space_id, class: 'form-control' %>
    </div>
  <%end%>

  <div class="field form-group field">
    <%= form.label :street %>
    <%= form.text_field :street, id: :address_street, class: 'form-control' %>
  </div>

  <div class="field form-group field">
    <%= form.label :unit %>
    <%= form.text_field :unit, id: :address_unit, class: 'form-control' %>
  </div>

  <div class="field form-group field">
    <%= form.label :city %>
    <%= form.text_field :city, id: :address_city, class: 'form-control' %>
  </div>

  <div class="field form-group field">
    <%= form.label :state %>
    <%= form.text_field :state, id: :address_state, class: 'form-control' %>
  </div>

  <div class="field form-group field">
    <%= form.label :zip %>
    <%= form.text_field :zip, id: :address_zip, class: 'form-control' %>
  </div>

  <div class="field form-group field">
    <%= form.label :country %>
    <%= form.text_field :country, id: :address_country, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-success pull-right'  %>
  </div>
<% end %>
