<!-- MODAL BUTTONS -->
<button type="button" class="btn btn-xs" style="color: white; background: black;" data-toggle="modal" data-target="#addAddressModal">Update Address <%= icon('map') %></button>

<!-- Modal -->
  <div class="modal fade" id="addAddressModal" role="dialog">
    <div class="row modal-dialog">

      <!-- Modal content-->
      <div class="col-md-12 modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title" style="color: black;">
            <%if @space %>
             Update Address
            <%else%>
              Add Address
            <%end%>
          <%= icon('map') %></h4>
        </div>

        <!-- Modal body-->
          <div class="modal-body">
            <%if @space.address %>
              <%= render 'addresses/form', method: :put, address: @space.address %>
            <%else%>
              <%= render 'addresses/form', address: Address.new %>
            <%end%>
        </div>

      </div>

    </div>
  </div>
