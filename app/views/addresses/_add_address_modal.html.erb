<!-- MODAL BUTTONS -->
<button type="button" class="btn btn-xs" style="color: white; background: black;" data-toggle="modal" data-target="#addAddressModal">Add Address <%= icon('map') %></button>

<!-- Modal -->
  <div class="modal fade" id="addAddressModal" role="dialog">
    <div class="row modal-dialog">

      <!-- Modal content-->
      <div class="col-md-6 modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title" style="color: black;">Add Address <%= icon('map') %></h4>
        </div>

        <!-- Modal body-->
        <div class="modal-body">
          <%= render 'addresses/form', address: Address.new %>
        </div>

      </div>

    </div>
  </div>
