<!-- <#%=link_to "#editdeskmodal", data: {toggle: "modal-content"} do %><#%= icon('pencil-square-o') %><#%end%> -->
<button type="button" class="btn btn-sm" style="color: blue; background: white;" data-toggle="modal" data-target="#editDeskModal"><%= icon('pencil-square-o') %></button>

<!-- Modal -->
  <div class="modal fade" id="editDeskModal" role="dialog">
    <div class="row modal-dialog">

      <!-- Modal content-->
      <div class="col-md-6 modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title" style="color: black;">Update Desk <%= icon('pencil-square-o') %></h4>
        </div>

        <!-- Modal body-->
          <div class="modal-body">
            <%= render 'desks/form', method: :put, desk: @desk %>
        </div>

      </div>

    </div>
  </div>
