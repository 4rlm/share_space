<!-- MODAL BUTTONS -->
<button type="button" class="btn btn-xs" style="color: white; background: black;" data-toggle="modal" data-target="#addDeskModal">Add Desk <%= icon('cube') %></button>

<!-- Modal -->
  <div class="modal fade" id="addDeskModal" role="dialog">
    <div class="row modal-dialog">

      <!-- Modal content-->
      <div class="col-md-10 modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title" style="color: black;">Add Desk <%= icon('cube') %></h4>
        </div>

        <!-- Modal body-->
          <div class="modal-body">
            <%= render 'desks/form', desk: Desk.new %>
        </div>

      </div>

    </div>
  </div>
