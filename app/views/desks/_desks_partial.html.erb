<p id="notice"><%= notice %></p>

<h1>Desks</h1>

<div class="row">

<table class="table table-bordered table-hover table-striped text-nowrap">

  <thead>
    <tr>
      <th>Space</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @desks.each do |desk| %>
      <tr>
        <td><%= desk.space_id %></td>
        <td><%= link_to 'Show', desk %></td>
        <td><%= link_to 'Edit', edit_desk_path(desk) %></td>
        <td><%= link_to 'Destroy', desk, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>


<%= link_to 'New Desk', new_desk_path, class: "btn btn-success" %>
