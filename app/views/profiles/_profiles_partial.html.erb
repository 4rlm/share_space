<p id="notice"><%= notice %></p>

<h3>Profiles</h3>

<div class="row">
  <table class="table table-bordered table-hover table-striped text-nowrap">
  <thead>
    <tr>
      <th>User</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone</th>
      <th>Manage <%= icon('sliders') %></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.user_id %></td>
        <td><%= link_to profile.first_name, profile %></td>
        <td><%= link_to profile.last_name, profile %></td>
        <td><%= profile.phone %></td>

        <td><%= link_to edit_profile_path(profile) do %>
          <%= icon('pencil-square-o') %>
          <% end %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

</div>

<%= link_to 'New Profile', new_profile_path, class: "btn btn-success" %>
